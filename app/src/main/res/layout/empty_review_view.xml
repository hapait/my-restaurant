<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical">

    <com.mcc.restaurant.view.RobotoTextView
        android:id="@+id/no_review_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/margin_8dp"
        android:text="@string/empty_review_text"
        android:textColor="@android:color/black"
        android:textSize="@dimen/txt_size_20sp" />

    <LinearLayout
        android:id="@+id/write_review"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin_8dp">


        <com.mcc.restaurant.view.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/write_a_review_text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_size_18sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>