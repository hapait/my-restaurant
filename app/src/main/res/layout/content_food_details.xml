<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_margin_8dp"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/messenger_button"
            android:layout_width="180dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:orientation="horizontal"
            android:padding="@dimen/padding_button">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:src="@drawable/ic_messenger_now" />

            <com.mcc.restaurant.view.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:text="@string/messenger_button_text"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_size_button"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/call_button"
            android:layout_width="180dp"
            android:layout_height="42dp"
            android:layout_marginLeft="@dimen/padding_margin_4dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:orientation="horizontal"
            android:padding="@dimen/padding_button">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:src="@drawable/ic_call_white" />

            <com.mcc.restaurant.view.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:text="@string/call_button_text"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_size_button"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_margin_8dp">

        <LinearLayout
            android:id="@+id/name_price_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="7">

            <com.mcc.restaurant.view.RobotoTextView
                android:id="@+id/tv_food_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="@dimen/pad_margin_7dp"
                android:text="Beef Cheese Chicken Burger with Extra Sauce"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size_20sp" />

            <com.mcc.restaurant.view.RobotoTextView
                android:id="@+id/tv_food_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_8dp"
                android:layout_weight="2"
                android:gravity="right|top"
                android:padding="@dimen/pad_margin_7dp"
                android:text="$5.99"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_size_18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <com.mcc.restaurant.view.MontserratTextView
            android:id="@+id/tv_food_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_price_holder"
            android:padding="@dimen/pad_margin_7dp"
            android:text="Food Details"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txt_size_14sp" />
    </RelativeLayout>

    <include
        android:id="@+id/lyt_review"
        layout="@layout/content_review" />
</LinearLayout>