<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_margin_4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_margin_5dp"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_food_pic"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginBottom="@dimen/margin_4dp"
            android:background="@color/grey_light"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/pad_margin_5dp"
            android:paddingBottom="@dimen/pad_margin_5dp">

            <com.mcc.restaurant.view.MontserratTextView
                android:id="@+id/tv_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_4dp"
                android:maxLines="2"
                android:text="BBQ Beef Cheese Burger"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size_food_name" />

            <com.mcc.restaurant.view.MontserratTextView
                android:id="@+id/tv_food_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/margin_4dp"
                android:layout_marginLeft="@dimen/margin_4dp"
                android:text="Price $3.99"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size_food_price" />


            <ImageView
                android:id="@+id/iv_food_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/margin_4dp"
                android:src="@drawable/thumb_up_outline" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>