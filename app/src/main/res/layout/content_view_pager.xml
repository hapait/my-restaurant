<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lytProductSlider"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_view_pager">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_image_slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:overScrollMode="never" />

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/slider_indicator"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/height_width_30dp"
            android:layout_marginStart="@dimen/height_width_30dp" />

    </RelativeLayout>

</RelativeLayout>
