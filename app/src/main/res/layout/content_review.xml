<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.mcc.restaurant.view.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8dp"
        android:text="@string/reviews_title_text"
        android:textColor="@android:color/black"
        android:textSize="@dimen/txt_size_22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/write_review"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_8dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:orientation="horizontal">


        <com.mcc.restaurant.view.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:text="@string/write_a_review_text"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_size_16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_reviews_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/write_review"
        android:layout_margin="@dimen/pad_margin_5dp" />

    <include
        android:id="@+id/section_loader"
        layout="@layout/section_loader" />

    <include
        android:id="@+id/empty_review_view"
        layout="@layout/empty_review_view"
        android:visibility="gone" />

</RelativeLayout>
