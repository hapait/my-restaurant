<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/pad_margin_2dp"
    app:cardCornerRadius="@dimen/margin_4dp">

    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="190dp">

        <ImageView
            android:id="@+id/ivFoodImage"
            android:layout_width="170dp"
            android:layout_height="190dp"
            android:src="@android:drawable/ic_menu_camera" />

        <com.mcc.restaurant.view.RobotoTextView
            android:id="@+id/tvFoodName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="#aa000000"
            android:ellipsize="end"
            android:gravity="center_horizontal|center_vertical"
            android:maxEms="3"
            android:paddingLeft="@dimen/pad_margin_7dp"
            android:paddingRight="@dimen/pad_margin_7dp"
            android:singleLine="true"
            android:text="25"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_size_18sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>